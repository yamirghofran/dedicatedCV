# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/backend_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=backend_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application
APP_NAME="FastAPI Backend"
APP_VERSION="0.1.0"
DEBUG=True
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Azure Application Insights
# Get your connection string from Azure Portal > Application Insights > Overview
# Format: InstrumentationKey=xxx;IngestionEndpoint=https://...;LiveEndpoint=https://...
APPLICATIONINSIGHTS_CONNECTION_STRING=
ENABLE_AZURE_INSIGHTS=False

# AI/LLM
# Get your API key from https://console.groq.com/keys
GROQ_API_KEY=
# Default model. See https://console.groq.com/docs/models for options
GROQ_MODEL=llama3-70b-8192

# Translation
# Internal translation microservice (English -> Spanish)
TRANSLATION_SERVICE_URL=http://localhost:8001
# External translation provider (e.g., Spanish -> English)
EXTERNAL_TRANSLATION_API_URL=
EXTERNAL_TRANSLATION_API_KEY=

# BLOB
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=dedicatedcv
AZURE_STORAGE_PDF_CONTAINER_NAME=pdfs
AZURE_STORAGE_PFP_CONTAINER_NAME=pfp

# TRANSLATE
GOOGLE_CLOUD_TRANSLATE_API_URL=
GOOGLE_CLOUD_TRANSLATE_API_KEY=
